<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardview_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:text="Qué Busca :"
                android:textSize="24sp" />

            <SearchView
                android:id="@+id/searchview"
                android:layout_below="@+id/cardview_list_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_list_title"
                android:layout_toEndOf="@+id/searchview"
                android:background="@android:drawable/ic_btn_speak_now"
                android:gravity="center|bottom"/>

            <TextView
                android:id="@+id/cardview_list_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchview"
                android:paddingBottom="5dp"
                android:text="Dónde :"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/botones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/cardview_list_title2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:text="Ciudades"
                    android:background="@color/cardview_dark_background"
                    android:textColor="@color/cardview_light_background"/>

                <TextView
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_dialog_map"
                    android:text="Cerca de mi"
                    android:background="@color/cardview_dark_background"
                    android:textColor="@color/cardview_light_background"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="175dp"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:gravity="center"
                android:text="Usted está en: Lima, Perú" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawableTop="@drawable/ic_pork"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:text="Comida china"
                android:textSize="8dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button1"
                android:drawableTop="@drawable/ic_hotelo"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:text="Hoteles"
                android:textSize="8dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button2"
                android:drawableTop="@drawable/ic_store"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:text="Restaurantes"
                android:textSize="8dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button3"
                android:drawableTop="@drawable/ic_taxi"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:text="Taxis"
                android:textSize="8dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableLeft="@android:drawable/btn_star_big_on"
            android:text="Favoritos" />

        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_time"
            android:text="Histórico" />
    </LinearLayout>
</LinearLayout>